{
  "info": {
    "name": "EHR + User Management API Collection (Updated)",
    "description": "Postman Collection including EHR APIs, Auth APIs, User APIs, and File Upload",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "ehr-user-collection-002"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth","register"] },
            "body": { "mode": "raw", "raw": "{\n  \"userName\": \"John\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"address\": \"NYC\",\n  \"phone\": \"1234567890\",\n  \"userType\": \"client\"\n}" }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}" }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get User Info",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/user/info", "host": ["{{baseUrl}}"], "path": ["user","info"] }
          }
        },
        {
          "name": "Update User Info",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/user/update", "host": ["{{baseUrl}}"], "path": ["user","update"] },
            "body": { "mode": "raw", "raw": "{\n  \"userName\": \"John Updated\",\n  \"address\": \"California\"\n}" }
          }
        },
        {
          "name": "Update Password",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/user/update-password", "host": ["{{baseUrl}}"], "path": ["user","update-password"] },
            "body": { "mode": "raw", "raw": "{\n  \"oldPassword\": \"123456\",\n  \"newPassword\": \"654321\"\n}" }
          }
        },
        {
          "name": "Reset Password via Answer",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/user/reset-password", "host": ["{{baseUrl}}"], "path": ["user","reset-password"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"john@example.com\",\n  \"answer\": \"your-answer\",\n  \"newPassword\": \"654321\"\n}" }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/user/delete", "host": ["{{baseUrl}}"], "path": ["user","delete"] }
          }
        }
      ]
    },
    {
      "name": "Uploads",
      "item": [
        {
          "name": "Upload Profile Image",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/upload-image", "host": ["{{baseUrl}}"], "path": ["upload-image"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": "sample.png" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "EHR (Existing Mock)",
      "item": [
        {
          "name": "Get Patients",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/patients", "host": ["{{baseUrl}}"], "path": ["patients"] }
          }
        },
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/patients", "host": ["{{baseUrl}}"], "path": ["patients"] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Jane Doe\",\n  \"dob\": \"1990-01-01\"\n}" }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ]
}
